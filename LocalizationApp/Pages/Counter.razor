@page "/counter"
@using Microsoft.Extensions.Localization

<h1>@(localizer["titleCounterPage"])</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">@(localizerApp["OK"])</button>

@code {
    [Inject] IStringLocalizer<Counter> localizer { get; set; }
    [Inject] IStringLocalizer<App> localizerApp { get; set; }
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
